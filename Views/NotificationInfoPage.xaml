<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicinesTracker.Views.NotificationInfoPage"
             x:DataType="viewModels:NotificationInfoVM"
             xmlns:viewModels="clr-namespace:MedicinesTracker.ViewModels"
             Title="Уведомления">
    <Grid HorizontalOptions="Fill">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout>
            <!-- Секция «Частота» (остаётся без изменений) -->
            <Label Text="Частота" 
                   FontSize="14" 
                   Padding="0,0,0,5" 
                   TextColor="{StaticResource Gray500}" 
                   Opacity="0.8"/>
            <Border Margin="0,0,0,10">
                <Grid HorizontalOptions="Fill" 
                      Padding="15,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label Text="{Binding Medicine.IdReminder}" 
                           FontSize="14" VerticalOptions="Center" 
                           Grid.Column="0" />
                    <Button ImageSource="pen_line.png" 
                            Padding="0" 
                            BackgroundColor="Transparent" 
                            BorderColor="Transparent" 
                            CornerRadius="0" 
                            Opacity="1" 
                            Grid.Column="1" />
                </Grid>
            </Border>

            <Label Text="Начало курса приёма" 
                   FontSize="14" 
                   Padding="0,0,0,5" 
                   TextColor="{StaticResource Gray500}" 
                   Opacity="0.8"/>
            <Border Margin="0,0,0,10" Padding="10" >
                <Grid HorizontalOptions="Fill" 
                      Padding="5,0,0,0">
                    <Label Text="{Binding Medicine.DateStart}" 
                           FontSize="14" 
                           VerticalOptions="Center" />
                </Grid>
            </Border>
            <!-- Секция «Продолжительность» (остаётся без изменений) -->
            <Label Text="Продолжительность" 
                   FontSize="14" 
                   Padding="0,0,0,5" 
                   TextColor="{StaticResource Gray500}" 
                   Opacity="0.8"/>
            <Border Margin="0,0,0,10" Padding="10">
                <Grid HorizontalOptions="Fill" 
                      Padding="5,0,0,0">
                    <Label Text="{Binding Medicine.DateEnd}" 
                           FontSize="14" 
                           VerticalOptions="Center" />
                </Grid>
            </Border>

            <!-- CollectionView для списка напоминаний -->
            <Label Text="Время и дозировка" 
                   FontSize="14" 
                   Padding="0,0,0,5" 
                   TextColor="{StaticResource Gray500}" 
                   Opacity="0.8"/>
            <CollectionView ItemsSource="{Binding Medicine.IdReminder}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" 
                                Margin="0,0,0,10">
                            <Grid Padding="5" 
                                  RowDefinitions="Auto,Auto" 
                                  ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" 
                                       Text="{Binding Medicine.Time}" 
                                       FontSize="14" />
                                <HorizontalStackLayout Grid.Column="1" Spacing="5">
                                    <Label
                                           Text="{Binding Medicine.Dosage}"
                                           FontSize="14" 
                                           HorizontalTextAlignment="End"/>
                                    <Label Text="{Binding Medicine.UnitName}"
                                           FontSize="14" 
                                           HorizontalTextAlignment="End"/>
                                </HorizontalStackLayout>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

        <!-- Кнопка «Сохранить» -->
        <Button Grid.Row="1" 
                Text="Сохранить" 
                FontFamily="OpenSansSemibold" 
                BackgroundColor="{StaticResource PrimaryDark}" />
    </Grid>

</ContentPage>